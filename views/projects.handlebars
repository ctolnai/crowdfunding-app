<section class="container">
  <h3 class="project-name">{{project.name}}</h3>
  <h4>Opening Hour: {{format_time project.starting_date}}</h4>
  <h4>Closing Hour: {{format_time project.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each project.paintings as |painting|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>